            <li>
                <span class="link-bag" id="cart2"></span>
                <div class="all_cart close">
                    <div class="cart_box">
                        <div class="low_spis">
                            {{#if cart}}
                            {{#each cart}}
                            <span>
                                <div class="box_c">
                                    <img src="{{img}}" alt="">
                                    <p>{{@key}}</p>
                                </div>
                            </span>
                            {{/each}}
                            {{!-- <span>
                                <div class="box_c">
                                    <img src="/images/mors.jpeg" alt="">
                                    <p>Lorem ipsum dolor sit amet consectetur</p>
