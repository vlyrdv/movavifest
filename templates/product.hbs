<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <link rel="stylesheet" href="/static/styles/header/header.css">
    <link rel="stylesheet" href="/static/styles/product/product.css">
    <link rel="stylesheet" href="/static/styles/footer/footer.css">
    <script src="/static/js/header/header.js" defer></script>
    <script src="/static/js/product/product.js" defer></script>
    <script src="/static/js/footer/footer.js" defer></script>
</head>

<body>
    {{> header}}
    <form action="/cartadd" method="GET">
        <main>
            {{#each data}}
            <div class="prod_img">
                <img src="{{img}}">
            </div>
            <div class="descrip">
                <p class="type">{{sm_desc}}</p>
                <div class="raiting">
                    <img src="/icons/star.png" width="16px" height="16px">
                    <p>{{raiting}}</p>
                </div>
                <p name="product_name" class="name">{{@key}}</p>
                <input type="text" value="{{id_product}}" name="id" style="display:none;">
                <input type="text" value="{{@key}}" name="name" style="display:none;">
                <div class="description">
                    <p>{{all_desc}}</p>
                </div>
                <div class="compound">
                    <p><b>Состав:</b> {{compound}}</p>
                </div>
                <div class="val_and_price">
                    <div class="all">
                        <div class="weight">
                            <p>Вес</p>
                            <select name="weight" id="weight">
                                <option value="100">100 гр</option>
                                <option value="150">150 гр</option>
                                <option value="200">200 гр</option>
                                <option value="250">250 гр</option>
                                <option value="300">300 гр</option>
                                <option value="350">350 гр</option>
                                <option value="400">400 гр</option>
                                <option value="450">450 гр</option>
                                <option value="500">500 гр</option>
                                <option value="550">550 гр</option>
                            </select>
                        </div>
                        <div class="val">
                            <p>Пакеты</p>
                            <select name="val" id="val">
                                <option value="1">1 шт</option>
                                <option value="2">2 шт</option>
                                <option value="3">3 шт</option>
                                <option value="4">4 шт</option>
                                <option value="5">5 шт</option>
                                <option value="6">6 шт</option>
                                <option value="7">7 шт</option>
                                <option value="8">8 шт</option>
                                <option value="9">9 шт</option>
                                <option value="10">10 шт</option>
                            </select>
                        </div>
                    </div>
                    <div class="price">
                        <p id="pr1ce">{{price}} <b>р</b></p>
                    </div>
                </div>
                <div class="buy_and_fav">
                    <button type="submit">В корзину</button>
                    <a href="/likeadd?prod_id={{id_product}}"><img src="/icons/heart.png" alt=""></a>
                </div>
            </div>
            {{/each}}
        </main>
    </form>
    {{> footer}}
</body>

</html>